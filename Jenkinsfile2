pipeline {
    environment {
        dockerimagename = "ramann123/myimage"
        registryCredential = 'dockerhublogin'  // Jenkins credential ID for DockerHub
        REGISTRY_URL = 'docker.io' // DockerHub URL
    }

    agent any

    stages {
        stage('Login to Docker Hub') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: registryCredential, usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                        sh '''
                        podman login ${REGISTRY_URL} --username $USERNAME --password $PASSWORD
                        '''
                    }
                }
            }
        }

        stage('Build Image') {
            steps {
                script {
                    sh '''
                    podman build -t ${dockerimagename} -f ./dockerfile .
                    '''
                }
            }
        }

        stage('Pushing Image') {
            steps {
                script {
                    sh '''
                    podman push ${dockerimagename} ${REGISTRY_URL}/${dockerimagename}:latest
                    '''
                }
            }
        }
    }
}
